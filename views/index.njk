{% extends "layout.njk" %}

{%block head%}

<link rel="stylesheet" href="/style.css">

{% endblock %}



{%block content%}
    <section>
       
        <div class="container">

            <div class="container-main">

                <div class="container-content">
            
                    <h1>As melhores receitas</h1>
                    <p>Aprenda a construir os melhores pratos</br>
                        com receitas criadas por profissionais</br>
                        do mundo inteiro.</p>
                </div>

                <div class="img-chefe">
                    <img src="/assets/chef.png" alt="chef">
                </div>

            </div>

        </div>

    </section>


    <section class="more-acess">

        <h1>Mais acessadas</h1>

       <div class="more-acess-content"> 
           
            <div class="card-recipe" id="burger">

                <img src="/assets/burger.png" alt="burger">
                <h3>Triplo burguer</h3>
                <p>Por Jorge Relato</p>

            </div>

            <div class="card-recipe" id="pizza">
                
                <img src="/assets/pizza.png" alt="burger">
                <h3>Pizza 4 estações</h3>
                <p>Por Jorge Relato</p>

            </div>

            <div class="card-recipe" id="espaguete">
                
                <img src="/assets/espaguete.png" alt="burger">
                <h3>Espaguete</h3>
                <p>Por Jorge Relato</p>

            </div>

            <div class="card-recipe" id="lasanha" >
                
                <img src="/assets/lasanha.png" alt="burger">
                <h3>Lasanha mac n' cheese</h3>
                <p>Por Jorge Relato</p>

            </div>


            <div class="card-recipe" id="doce">
                
                <img src="/assets/doce.png" alt="burger">
                <h3>Docinhos pão-do-céu</h3>
                <p>Por Jorge Relato</p>

            </div>


            <div class="card-recipe" id="asinhas">
                
                <img src="/assets/asinhas.png" alt="burger">
                <h3>Asinhas de frango ao barbecue</h3>
                <p>Por Jorge Relato</p>

            </div>


        </div>

        

    </section>

{%endblock%}

    <script src="scripts.js"></script>
